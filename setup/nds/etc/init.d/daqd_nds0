#!/sbin/runscript

opts="${opts}"
hostname=`hostname`

start() {
	ebegin "Starting Data Server NDS 0"
    # archive old log files, creating archive if needed
	cd /opt/rtcds/llo/l1/target/l1daqnds0
    mkdir -p logs/archive
	mv -f logs/daqd.log*  logs/archive/
        
    # start up NDS daqd with date-stamped log
    stamp=`date +%s`
	start-stop-daemon --start --quiet -b -m --pidfile /var/run/daqd.pid  --chuid controls --exec /opt/rtcds/llo/l1/target/l1daqnds0/daqd -- -c /opt/rtcds/llo/l1/target/l1daqnds0/daqdrc -l /opt/rtcds/llo/l1/target/l1daqnds0/logs/daqd.log.${stamp}
	eend $?
}

stop() {
	ebegin "Stopping Data Server NDS 0"
	start-stop-daemon --stop --signal 9 --chuid controls --exec /opt/rtcds/llo/l1/target/l1daqnds0/daqd
	eend $?
}
