#!/bin/bash -e
. /etc/advligorts/env
cmd="$1"
sys="$2"
if [ -z "$sys" ] ; then
    echo "usage: $(basename $0) start|stop <sys>"
    exit 1
fi
TARGET=/opt/rtcds/${SITE,,*}/${IFO,,*}
case $cmd in
    start)
        /sbin/insmod "$TARGET"/target/${sys}/bin/${sys}.ko
        ;;
    stop)
        /sbin/rmmod ${sys}
        ;;
    *)
        echo "unknown command '$cmd'"
        exit 1
        ;;
esac
