#!/bin/bash

source /etc/advligorts/standalone_edc/edc.config

mkdir /var/lib/standalone_edc/db
mkdir /var/lib/standalone_edc/tmp
mkdir /var/lib/standalone_edc/log
mkdir /var/lib/standalone_edc/burt

cat /etc/advligorts/standalone_edc/edc.cmd.tmpl | \
    sed s/@ifo@/$ifo/g | \
    sed s/@IFO@/$IFO/g | \
    sed s/@site@/$site/g | \
    sed s/@SITE@/$SITE/g | \
    sed s/@sys@/$sys/g | \
    sed s/@SYS@/$SYS/g | \
    sed s/@SYNCSRC@/$SYNCSRC/g | \
    sed s/@DCUID@/$DCUID/g > /var/lib/standalone_edc/edc.cmd

cat /etc/advligorts/standalone_edc/edc.db.tmpl | \
    sed s/@ifo@/$ifo/g | \
    sed s/@IFO@/$IFO/g | \
    sed s/@site@/$site/g | \
    sed s/@SITE@/$SITE/g | \
    sed s/@sys@/$sys/g | \
    sed s/@SYS@/$SYS/g | \
    sed s/@SYNCSRC@/$SYNCSRC/g | \
    sed s/@DCUID@/$DCUID/g > /var/lib/standalone_edc/db/edc.db

cd /var/lib/standalone_edc/
/usr/bin/standalone_edc edc.cmd